.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
page {
  background: #343434;
}
.under-top {
  margin-top: 90rpx;
}
scroll-view.common-scroll {
  position: fixed;
  top: 90rpx;
  left: 0;
  right: 0;
  bottom: 90rpx;
}
.left-right {
  display: flex;
  align-items: center;
}
.left-right .right {
  flex: 1;
  overflow: hidden;
}
.ellipse-single {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pg-search {
  color: #fff;
}
.pg-search .search-box {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  background: #333;
  margin: 0 20rpx;
  height: 70rpx;
}
.pg-search .search-box .icon-search {
  margin: 0 10rpx;
  padding-bottom: 10rpx;
  font-size: 50rpx;
  color: #ff1c80;
}
.pg-search .search-box .icon-cross {
  font-size: 40rpx;
  padding: 0 4px;
  color: #ff1c80;
}
.pg-search .search-box input {
  flex: 1;
}
.pg-search .title {
  margin: 20rpx 0 10rpx;
  font-size: 32rpx;
}
.pg-search .title .icon-cross {
  display: inline-block;
  float: right;
  padding: 0 10rpx;
  font-size: 40rpx;
}
.pg-search .hot-key {
  padding: 10px;
  box-sizing: border-box;
}
.pg-search .hot-key text {
  display: inline-block;
  color: #ccc;
  margin: 2px;
  padding: 0 4px;
  border: 0.5px solid #ccc;
  font-size: 28rpx;
  line-height: 38rpx;
  border-radius: 2px;
}
.pg-search .search-history {
  padding: 10px;
  box-sizing: border-box;
  color: #eee;
}
.pg-search .search-history .history-list {
  font-size: 30rpx;
}
.pg-search .search-history .history-list .item {
  margin: 20rpx 0;
}
.pg-search .search-history .history-list .item .text {
  color: #ccc;
}
.pg-search .search-history .history-list .item .icon-cross {
  display: inline-block;
  float: right;
  padding: 0 10rpx;
  color: #f00;
  font-size: 40rpx;
}
.pg-search scroll-view {
  top: 160rpx;
}
.pg-search scroll-view .zhida {
  padding: 10px;
  box-sizing: border-box;
}
.pg-search scroll-view .zhida .left {
  margin-right: 10px;
  width: 40px;
  height: 40px;
}
.pg-search scroll-view .zhida .left image {
  border-radius: 20px;
  width: 100%;
  height: 100%;
}
.pg-search scroll-view .zhida .right {
  font-size: 12px;
}
.pg-search scroll-view .other {
  padding: 30rpx 0 60rpx;
  font-size: 32rpx;
  text-align: center;
}
