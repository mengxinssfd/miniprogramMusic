.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
page {
  background: #343434;
}
.under-top {
  margin-top: 90rpx;
}
scroll-view.common-scroll {
  position: fixed;
  top: 90rpx;
  left: 0;
  right: 0;
  bottom: 90rpx;
}
.left-right {
  display: flex;
  align-items: center;
}
.left-right .right {
  flex: 1;
  overflow: hidden;
}
.ellipse-single {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.tab-rec .swiper-wrapper {
  position: relative;
  padding-bottom: 40%;
  width: 100%;
  height: 0;
}
.tab-rec .swiper-wrapper swiper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.tab-rec .swiper-wrapper swiper swiper-item {
  width: 100%;
  height: auto;
}
.tab-rec .swiper-wrapper swiper swiper-item image {
  width: 100%;
}
.tab-rec .swiper-wrapper .dots {
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
}
.tab-rec .swiper-wrapper .dots view {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 5px;
  background: #fff;
  transition: width 200ms linear;
}
.tab-rec .swiper-wrapper .dots view ~ view {
  margin-left: 10px;
}
.tab-rec .swiper-wrapper .dots view.active {
  width: 20px;
}
