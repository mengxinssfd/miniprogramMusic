@import "../../common/stylus/mixin.styl"
@import "../../app.styl"
.top-item {
  display: flex;
  align-items: center;
  margin: $r(40) $r(20);
  .left {
    display: block;
    width: w = $r(100);
    height: w;
    margin-right: $r(20);
    image {
      width: 100%;
      height: 100%;
    }
  }
  .right {
    flex: 1;
    overflow: hidden;
    font-size: $r(30);
  }
}