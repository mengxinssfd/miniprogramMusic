@import "./common/stylus/mixin.styl"
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: $r(200) 0;
  box-sizing: border-box;
}

page {
  background: #343434;
}

.under-top {
  margin-top: $r(90);
}

scroll-view.common-scroll {
  position: fixed;
  top: $r(90);
  left: 0;
  right: 0;
  bottom: $r(90);
}

.left-right {
  display: flex;
  align-items: center;
  .right {
    flex: 1;
    overflow: hidden;
  }
}

.ellipse-single {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}